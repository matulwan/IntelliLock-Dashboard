# ============================================================================
# INTELLI-LOCK DASHBOARD - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ==================== APPLICATION SETTINGS ====================
APP_NAME="Intelli-Lock Dashboard"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ==================== LOGGING ====================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ==================== DATABASE CONFIGURATION ====================
# For MySQL/MariaDB (RECOMMENDED for production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=intellilock_db
DB_USERNAME=root
DB_PASSWORD=

# For SQLite (Development only - NOT recommended for production)
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# ==================== SESSION & CACHE ====================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# ==================== BROADCASTING & QUEUE ====================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# ==================== FILESYSTEM & STORAGE ====================
FILESYSTEM_DISK=public

# Storage path for uploaded photos from ESP32-CAM
# Photos will be stored in: storage/app/public/photos/
# Make sure to run: php artisan storage:link

# ==================== MAIL CONFIGURATION ====================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@intellilock.local"
MAIL_FROM_NAME="${APP_NAME}"

# ==================== REDIS (Optional) ====================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==================== MEMCACHED (Optional) ====================
MEMCACHED_HOST=127.0.0.1

# ==================== AWS S3 (Optional - for cloud storage) ====================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==================== VITE (Frontend Build) ====================
VITE_APP_NAME="${APP_NAME}"

# ==================== IOT DEVICE SETTINGS ====================
# These are informational - actual IoT configuration is in ESP32 code
IOT_DEVICE_TIMEOUT=60
IOT_HEARTBEAT_INTERVAL=30
IOT_MAX_PHOTO_SIZE=5120

# ==================== SECURITY SETTINGS ====================
# Enable API rate limiting
API_RATE_LIMIT=60

# Session security
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax
